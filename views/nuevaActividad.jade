extends layout

block content
  h1= title

  form#frmNuevaActividad(method="post", action="/addActividad")
    p Materia: #[span#spaMateria]
    input#hidMateria(type="hidden", name="matnombre")
    input#hidSemestre(type="hidden", name="semestre")

    input#txtNombreActividad(type="text", name="actnombre", placeholder="Nombre actividad")
    input#txtDescripcion(type="text", name="descripcion", placeholder="Descripción")
    br
    input#txtFechaInicio(type="date", name="fecinicio")
    input#txtFechaFinal(type="date", name="fecfinal")
    br
    input#txtPuntos(type="text", name="puntos", placeholder="Puntos (número)")
    input#txtCalificacion(type="text", name="calificacion", placeholder="Calificacion")
    br
    br
    button#btnSubmit(type="submit") Agregar
    &nbsp
    a(href="/agenda") Cancelar

block append scripts
    script(src="/javascripts/nuevaActividad.js")
